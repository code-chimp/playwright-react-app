{
  "name": "playwright-react-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "0BSD",
  "description": "A simple React 19 project demonstrating Playwright best practices. This project is meant to serve as a learning resource showcasing the integration of end-to-end testing with modern web development practices.",
  "keywords": [
    "react",
    "playwright",
    "end-to-end-testing",
    "e2e",
    "testing",
    "typescript",
    "javascript",
    "web-development",
    "vite",
    "automation",
    "living-documentation",
    "training"
  ],
  "homepage": ".",
  "repository": "github:code-chimp/playwright-react-app#README",
  "author": {
    "name": "Tim Goshinski",
    "email": "tim@code-chimp.com",
    "url": "https://code-chimp.com"
  },
  "volta": {
    "node": "22.16.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "check:lockfile": "node ./scripts/validate-lockfile.cjs",
    "clean": "run-p clean:*",
    "clean:coverage": "rimraf coverage",
    "clean:dist": "rimraf dist",
    "clean:istanbul": "rimraf .nyc_output",
    "cov:build": "run-s clean cov:build:app cov:build:sourcemaps",
    "cov:build:app": "ng build --configuration development",
    "cov:build:sourcemaps": "cpx \"src/**/*.ts\" dist/playwright-playground/browser/src",
    "cov:report": "run-p cov:report:*",
    "cov:report:post": "rimraf dist/playwright-playground/browser/src",
    "cov:report:html": "nyc report --reporter=html",
    "cov:report:text": "nyc report --reporter=text",
    "cov:report:lcov": "nyc report --reporter=lcov",
    "cov:serve:coverage": "http-server-spa ./coverage index.html 4201",
    "cov:serve:dist": "http-server-spa ./dist/playwright-playground/browser index.html 4200",
    "e2e:install": "npx playwright install",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "run-p lint:*",
    "lint:code": "eslint",
    "fix:ts": "eslint ./src/**/**.ts* --fix",
    "lint:styles": "stylelint \"./src/**/*.css\"",
    "fix:styles": "stylelint \"./src/**/*.css\" --fix",
    "prepare": "husky",
    "test:e2e": "playwright test",
    "test:e2e:ci": "cross-env CI=true COVR=false playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind": "^4.0.0",
    "tailwindcss": "^4.1.11",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.53.2",
    "@types/lint-staged": "~13.3.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "browserslist": "^4.25.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "rimraf": "^6.0.1",
    "stylelint": "^16.21.1",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "v8-to-istanbul": "^9.3.0",
    "vite": "^7.0.2"
  }
}
